# Exchange ICS Sync - Environment Variables Template
# Copy this file to .env and fill in your values
# These environment variables will override values in config.yaml

# Exchange Server Configuration
EXCHANGE_SERVER=mail.example.com
EXCHANGE_EMAIL=user@example.com
EXCHANGE_USERNAME=username
EXCHANGE_PASSWORD=your-password-here
EXCHANGE_DOMAIN=DOMAIN

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Configuration file path (optional)
CONFIG_PATH=/app/config.yaml
